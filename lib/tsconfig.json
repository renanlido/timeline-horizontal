{
  "extends": "../tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": ["*", "src/*"]
    },
    "jsx": "react-jsx",
    "resolveJsonModule": false
  },
  "include": ["src", "postcss.config.cjs"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "cypress",
    "public",
    "scripts",
    "src/**/*.test.*",
    "src/**/*.spec.*"
  ]
}
